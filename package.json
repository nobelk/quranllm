    "type": "git",
    "url": "git+https://github.com/nobelkhandaker/quranllm.git"
  },
  "bugs": {
    "url": "https://github.com/nobelkhandaker/quranllm/issues"
  },
  "homepage": "https://github.com/nobelkhandaker/quranllm#readme",
  "scripts": {
    "build": "tsc",
    "example": "npm run build && node dist/example.js",
