{
  "name": "quranllm",
  "version": "0.1.0",
  "description": "LLM-powered Q&A service for Al-Quran",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/example.js",
    "start:server": "npm run build && node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "dev": "npx tsx src/main.ts",
    "dev:example": "npx tsx example.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "Dr. Nobel Khandaker",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.12.0",
    "jest": "^30.1.3",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@llamaindex/huggingface": "^0.1.30",
    "@llamaindex/openai": "^0.4.20",
    "@llamaindex/pinecone": "^0.1.22",
    "@llamaindex/readers": "^3.1.21",
    "@llamaindex/workflow": "^1.1.24",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/terminus": "^11.0.0",
    "@pinecone-database/pinecone": "^6.1.2",
    "dotenv": "^17.2.2",
    "llamaindex": "^0.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "yocto-spinner": "^1.0.0",
    "zod": "^4.1.11"
  }
}
